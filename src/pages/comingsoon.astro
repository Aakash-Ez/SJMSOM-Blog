---
import Header from '~/components/widgets/Header.astro';
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import { headerData } from '~/navigation';

const title = `Coming Soon`;
---


<Layout metadata={{ title }}>
  <slot name="header">
    <Header
      links={headerData?.links}
      actions={[
        {
          text: 'Placement Report',
          href: 'https://www.som.iitb.ac.in/wp-content/uploads/2016/07/Final-Placement-Report-2021-23.pdf'
        },
      ]}
      showToggleTheme
      position="right"
    />
  </slot>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-6xl">
          <span class="text-primary">COMING SOON!</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">Keeping checking!!!</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          In the meantime, you can find plenty of other things on our homepage.
        </p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Back to homepage</a>
      </div>
    </div>
  </section>
</Layout>
